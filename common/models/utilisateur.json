{
  "name": "utilisateur",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string",
      "required": true
    },
    "password": {
      "type": "string",
      "required": true
    },
    "role": {
      "type": "string",
      "required": true
    },
    "token": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {},
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    }
  ],
  "methods": {
    "signin": {
      "accepts": [
        {
          "arg": "email",
          "type": "string",
          "required": true,
          "description": "l'email de l'utilisateur",
          "http": {
            "source": "form"
          }
        },
        {
          "arg": "password",
          "type": "string",
          "required": true,
          "description": "le password de l'utilisateur",
          "http": {
            "source": "form"
          }
        }
      ],
      "returns": [
        {
          "arg": "jwt",
          "type": "string",
          "root": true,
          "description": "le webToken de l'utilisateur"
        }
      ],
      "description": "sigin un utilisateur",
      "http": [
        {
          "path": "/signin",
          "verb": "post"
        }
      ]
    }
  }
}
